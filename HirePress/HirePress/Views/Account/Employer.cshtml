@using HirePressCore.Model
@model SignupViewModel
@{
    ViewBag.Title = "Employer - Signin";
}

<style>
    .page-content {
        padding: 0 !important
    }

    .employer-wrapper {
        width: 100vw;
        background: url('https://affixtheme.com/html/xmee/demo/img/figure/bg14-l.jpg');
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .employer-login-wrap .form-label {
        color: #efefef;
    }

    .employer-signup-wrap .form-label {
        color: #444;
    }

    .employer-login-wrap {
        width: 100%;
        min-height: 760px;
        padding: 3rem;
        background: rgb(5 109 22 / 75%);
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }

    .employer-signup-wrap {
        padding: 3rem;
        width: 100%;
        min-height: 760px;
        background: white;
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    .w-100 {
        width: 100%;
    }

    .slicknav_btn {
        display: none !important;
    }

    @@media only screen and (max-width: 600px) {
        .theme .row {
            padding-left: 7px !important;
        }

        .theme .col-sm-6 {
            width: 360px !important;
        }

            .theme .col-sm-6:nth-child(2) {
                padding-left: 17px !important;
                padding-right: 0px !important;
            }
    }
</style>

<div class="employer-wrapper">
    <div class="theme">
        <div class="row">
            <div class="col-sm-6" style="padding-right: 0px;width:500px;">
                <div class="employer-login-wrap">
                    @using (Html.BeginForm("Employer", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h2 class="text-left color-white" style="color:white !important">Login</h2>
                        <hr />
                        <p class="text-center color-danger-300" style="color:#632a2a !important;">@ViewBag.Message</p>
                        <div class="form-group mt-5">
                            <label class="form-label">Email</label>
                            @Html.TextBoxFor(m => m.LVM.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.LVM.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Password</label>
                            @Html.PasswordFor(m => m.LVM.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.LVM.Password, "", new { @class = "text-danger" })
                        </div>
                        <a href="javascript:void(0)" class="color-white" style="color:white !important"><i class="fal fa-frown" aria-hidden="true"></i> Forget Password?</a> <br>
                        <button type="submit" class="btn btn-primary w-100 color-white mt-5">LOGIN</button>
                    }
                </div>
            </div>
            <div class="col-sm-6" style="padding-left: 0px;width:500px;">
                <div class="employer-signup-wrap">
                    @using (Html.BeginForm("Employer", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h2 class="mb-4">Signup</h2>
                        <div class="form-group">
                            <label class="form-label">Full Name</label>
                            @Html.TextBoxFor(m => m.RVM.FullName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.RVM.FullName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Mobile Number</label>
                            @Html.TextBoxFor(m => m.RVM.PhoneNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.RVM.PhoneNo, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Company Email</label>
                            @Html.TextBoxFor(m => m.RVM.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.RVM.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Password</label>
                            @Html.PasswordFor(m => m.RVM.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.RVM.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Confirm Password</label>
                            @Html.PasswordFor(m => m.RVM.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.RVM.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Referral Code</label>
                            <input name="college" type="text" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary w-100 color-white mt-5">REGISTER</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script>
        var message = "";
        if ('@Session["Email"]' != '') {
            message = 'Registered Successfully! A confirmation mail has been sent to your Email - @Session["Email"]. Please Confirm.';
            Swal.fire(message);
        }
    </script>
}
