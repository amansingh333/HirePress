<style>
    .location {
        display: inline-block;
        color: #9a9a9a;
        line-height: 22px;
        margin: 8px 0;
        width: 100%;
    }

    .job-listings .btn-full-time {
        font-size: 12px;
        color: #6f6f6f;
        text-transform: none;
        line-height: inherit;
    }

    .filter-heading {
        font-size: 16px;
        margin-bottom: 1.2rem;
        font-weight: 500 !important;
    }

    .filters-wrapper .box {
        padding: 15px;
        margin-bottom: 2rem;
    }

    .filters-wrapper label {
        font-size: 13px;
    }

    .job-posting-action {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .job-listings .btn-apply {
        line-height: normal;
    }

    .page-header {
        background: none;
    }

    .sidebar-heading {
        font-size: 18px !important;
    }

    .widghet .content h3 {
        font-size: 15px;
        margin-bottom: 0;
        font-weight: 300;
    }

    .widghet .content {
        margin: 1.5rem 0;
    }

    .job-bookmark {
        height: auto;
        width: 30px;
        position: absolute;
        top: 0;
        right: 2rem;
        margin: 1rem;
        cursor: pointer;
    }
</style>

